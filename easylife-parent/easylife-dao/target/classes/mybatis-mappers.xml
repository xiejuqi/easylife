<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<settings>
		<!-- changes from the defaults -->
		<setting name="lazyLoadingEnabled" value="false" />
		<setting name="cacheEnabled" value="false"/>
		<setting name="callSettersOnNulls" value="true" />  		 
	</settings>

	<typeAliases>
		<typeAlias alias="Member" type="org.easylife.domain.member.Member" />
		<typeAlias alias="ROLE" type="org.easylife.domain.member.Role" />
		<typeAlias alias="PERMISSION" type="org.easylife.domain.member.Permission" />
	</typeAliases>


	<mappers>
		<mapper resource="org/easylife/dao/common/common.xml"/>
	</mappers>
	
</configuration>
